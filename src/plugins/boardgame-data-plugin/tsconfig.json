{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "es6"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "sourceMap": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "noEmit": false,
        "noEmitOnError": true,
        // outDir will put the compiled javascript files in our root directory 
        // just as we were doing before with our babel compilation
        "outDir": ".",
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/*"
    ]
}